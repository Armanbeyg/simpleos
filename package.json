		"node-fetch": "^2.6.1",
		"node-schedule": "2.0.0",
		"open": "8.0.2",
		"popper.js": "1.16.1",
		"portfinder": "1.0.28",
		"primeicons": "4.1.0",
		"primeng": "11.3.0-rc.1",
		"quill": "1.3.7",
		"resize-observer-polyfill": "1.5.1",
		"socket.io": "3.1.2",
		"socket.io-client": "3.1.2",
		"sudo-prompt": "9.2.1",
