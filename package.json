{
	"name": "simpleos",
	"version": "1.0.6-rc1",
	"productName": "simpleos",
	"appId": "io.eosrio.simpleos",
	"compilerVersion": "DEFAULT",
	"description": "EOSIO Blockchain Interface & Wallet",
	"author": {
		"name": "EOS Rio",
		"email": "contact@eosrio.io"
	},
	"repository": "https://github.com/eosrio/simpleos",
	"license": "MIT",
	"scripts": {
		"config:default": "node configurations/build-simpleos.js",
		"config:liberland": "node configurations/build-liberland.js",
		"electron:start": "npm run postinstall:electron && npm-run-all -p electron:serve ng:serve",
		"electron:serve": "wait-on http-get://localhost:7777/ && electron index.js --serve --devtools",
		"start:electron-dev": "electron index.js --devtools --debug",
		"start:electron-prod": "electron index.js",
		"start:electron-prod-automode": "electron index.js --autostart",
		"build": "ng build",
		"build:prod": "ng build --prod",
		"build:mac": "electron-builder build --mac --publish=never",
		"build:win": "electron-builder build --win --publish=never",
		"build:linux": "electron-builder build --linux --publish=never",
		"build:linux-snap": "electron-builder build --linux snap --publish=never",
		"ng": "ng",
		"ng:serve": "ng serve --port 7777",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"release:default": "npm run config:default && npm run build:prod && electron-builder",
		"release:liberland": "npm run config:liberland && npm run build:prod && electron-builder",
		"postinstall:deps": "electron-builder install-app-deps",
		"postinstall:electron": "node scripts/postinstall.js"
	},
	"engines": {
		"node": ">= 14.15.0",
		"npm": ">= 7.4.0"
	},
	"private": true,
	"main": "index.js",
	"build": {
		"appId": "simpleos",
		"directories": {
			"output": "dist",
			"buildResources": "build"
		},
		"files": [
			"index.js",
			"ng-dist",
			"static",
			"resources",
			"electron_modules",
			"build/icons/**/*"
		],
		"afterSign": "electron-builder-notarize",
		"mac": {
			"hardenedRuntime": true,
			"entitlements": "scripts/entitlements.mac.plist",
			"category": "public.app-category.finance",
			"target": [
				"dmg"
			],
			"icon": "icons/simpleos/icon.icns"
		},
		"dmg": {
			"sign": false
		},
		"linux": {
			"executableName": "simpleos",
			"target": [
				"appImage",
				"deb"
			],
			"icon": "icons/simpleos",
			"category": "Network",
			"desktop": {
				"Name": "SimplEOS",
				"GenericName": "SimplEOS Wallet",
				"X-GNOME-FullName": "simpleos",
				"Comment": "SimplEOS Blockchain Wallet",
				"Type": "Application",
				"Terminal": "false",
				"StartupNotify": "false",
				"Categories": "Network;"
			}
		},
		"snap": {
			"confinement": "classic",
			"grade": "stable"
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "icons/simpleos/icon.ico"
		},
		"appx": {
			"backgroundColor": "#232526",
			"languages": [
				"en-US"
			],
			"showNameOnTiles": true,
			"identityName": "EOSRio.SimplEOS"
		},
		"nsis": {
			"oneClick": true,
			"createDesktopShortcut": true
		},
		"protocols": [
			{
				"name": "simpleos",
				"role": "Viewer",
				"schemes": [
					"simpleos"
				]
			}
		]
	},
	"files": [
		"*.js",
		"build",
		"static",
		"resources",
		"ng-dist",
		"node_modules"
	],
	"dependencies": {
		"@angular/animations": "11.2.4",
		"@angular/cdk": "11.2.3",
		"@angular/common": "11.2.4",
		"@angular/core": "11.2.4",
		"@angular/flex-layout": "^11.0.0-beta.33",
		"@angular/forms": "^11.2.4",
		"@angular/material": "^11.2.3",
		"@angular/material-moment-adapter": "^11.2.3",
		"@angular/platform-browser": "^11.2.4",
		"@angular/platform-browser-dynamic": "^11.2.4",
		"@angular/router": "^11.2.4",
		"@cds/core": "^5.0.3",
		"@clr/angular": "5.0.3",
		"@clr/core": "4.0.12",
		"@clr/icons": "5.0.3",
		"@clr/ui": "5.0.3",
		"@electron/remote": "^1.0.4",
		"@fortawesome/angular-fontawesome": "0.8.2",
		"@fortawesome/fontawesome-svg-core": "1.2.34",
		"@fortawesome/free-brands-svg-icons": "5.15.2",
		"@fortawesome/free-regular-svg-icons": "5.15.2",
		"@fortawesome/free-solid-svg-icons": "5.15.2",
		"@fortawesome/pro-duotone-svg-icons": "5.15.2",
		"@fortawesome/pro-light-svg-icons": "5.15.2",
		"@fortawesome/pro-regular-svg-icons": "5.15.2",
		"@fortawesome/pro-solid-svg-icons": "5.15.2",
		"@ledgerhq/hw-transport": "5.48.0",

		"@ngx-formly/core": "5.10.14",
		"@ngx-formly/material": "5.10.14",
		"@webcomponents/webcomponentsjs": "2.5.0",
		"angularx-qrcode": "^11.0.0",
		"animate.css": "4.1.1",
		"asn1-ber": "1.1.0",
		"auto-launch": "5.0.5",
		"bip32-path": "0.4.2",
		"body-parser": "1.19.0",
		"bootstrap": "4.6.0",
		"chart.js": "2.9.4",
		"cors": "2.8.5",
		"crypto-js": "4.0.0",
		"echarts": "^5.0.2",
		"electron-context-menu": "2.4.0",
