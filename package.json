{
  "name": "simpleos",
  "productName": "simpleos",
  "description": "EOS Blockchain Interface & Wallet",
  "author": {
    "name": "EOSRio",
    "email": "contact@eosrio.io"
  },
  "repository": "https://github.com/eosrio/simpleos",
  "license": "UNLICENSED",
  "version": "0.3.6",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 7878",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start:electron": "electron index.js --devtools",
    "publish": "electron-builder build --win -p always",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-watch": "ng build --prod --watch",
    "postinstall": "node patch.js && electron-builder install-app-deps"
  },
  "private": true,
  "main": "index.js",
  "build": {
    "appId": "simpleos",
    "files": [
      "ng-dist",
      "index.js",
      "native.js",
      "node_modules/{opn}/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    },
    "dmg": {
      "icon": "src/assets/icons/256x256.icns",
      "format": "UDZO"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "src/assets/icons/png/256x256.png",
      "category": "Network"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        {
          "provider": "github",
          "owner": "eosrio",
          "repo": "simpleos"
        }
      ],
      "icon": "src/favicon.ico"
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/favicon.ico"
    },
    "snap": {
      "confinement": "classic"
    },
    "deb": {
      "packageCategory": "Network"
    }
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.8",
    "@angular/cli": "^6.0.8",
    "@angular/compiler": "^6.0.4",
    "@angular/compiler-cli": "^6.0.4",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "10.1.2",
    "@webcomponents/custom-elements": "^1.0.0",
    "angular2-text-mask": "^9.0.0",
    "angular2-toaster": "^6.0.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "bootstrap": "^4.1.1",
    "codelyzer": "~4.2.1",
    "core-js": "^2.5.4",
    "electron": "2.0.2",
    "electron-builder": "^20.15.1",
    "electron-reload": "^1.2.2",
    "eosjs": "^14.0.0",
    "hammerjs": "^2.0.8",
    "jquery": "^3.3.1",
    "moment": "^2.22.2",
    "ng-lottie": "^0.3.1",
    "npm-run-all": "^4.1.3",
    "popper.js": "^1.14.3",
    "primeng": "^5.2.6",
    "protractor": "~5.3.0",
    "rxjs": "^6.2.0",
    "rxjs-compat": "^6.2.0",
    "text-encoding-shim": "latest",
    "text-mask-addons": "^3.7.2",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "zone.js": "^0.8.26"
  },
  "dependencies": {
    "@angular/animations": "^6.0.4",
    "@angular/cdk": "^6.0.4",
    "@angular/common": "^6.0.4",
    "@angular/core": "^6.0.4",
    "@angular/forms": "^6.0.4",
    "@angular/http": "^6.0.4",
    "@angular/language-service": "^6.0.4",
    "@angular/material": "^6.0.4",
    "@angular/platform-browser": "^6.0.4",
    "@angular/platform-browser-dynamic": "^6.0.4",
    "@angular/router": "^6.0.4",
    "@clr/angular": "^0.12.0-rc.2",
    "@clr/icons": "^0.12.0-rc.2",
    "@clr/ui": "^0.12.0-rc.2",
    "@fortawesome/angular-fontawesome": "^0.1.0-10",
    "@fortawesome/fontawesome-pro-webfonts": "^1.0.9",
    "@fortawesome/fontawesome-svg-core": "^1.2.0-11",
    "@fortawesome/free-brands-svg-icons": "^5.1.0-8",
    "@fortawesome/pro-light-svg-icons": "^5.1.0-8",
    "@fortawesome/pro-regular-svg-icons": "^5.1.0-8",
    "@fortawesome/pro-solid-svg-icons": "^5.1.0-8",
    "electron-builder-squirrel-windows": "^20.15.0",
    "electron-webpack": "^2.1.2",
    "menu": "^0.2.5",
    "opn": "^5.3.0"
  }
}
