{
  "name": "simpleos",
  "version": "1.0.7",
  "productName": "simpleos",
  "appId": "io.eosrio.simpleos",
  "compilerVersion": "DEFAULT",
  "description": "EOSIO Blockchain Interface & Wallet",
  "author": {
    "name": "EOS Rio",
    "email": "contact@eosrio.io"
  },
  "repository": "https://github.com/eosrio/simpleos",
  "license": "MIT",
  "scripts": {
    "config:default": "node configurations/build-simpleos.js",
    "config:liberland": "node configurations/build-liberland.js",
    "electron:start": "npm run postinstall:electron && npm-run-all -p electron:serve ng:serve",
    "electron:serve": "wait-on http-get://localhost:7777/ && electron index.js --serve --devtools",
    "start:electron-dev": "electron index.js --devtools --debug",
    "start:electron-prod": "electron index.js",
    "start:electron-prod-automode": "electron index.js --autostart",
    "build": "ng build",
    "build:mac": "electron-builder build --mac --publish=never",
    "build:win": "electron-builder build --win --publish=never",
    "build:linux": "electron-builder build --linux --publish=never",
    "build:linux-snap": "electron-builder build --linux snap --publish=never",
    "ng": "ng",
    "ng:serve": "ng serve --port 7777",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release:default": "npm run config:default && npm run build && electron-builder",
    "release:liberland": "npm run config:liberland && npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "postinstall:electron": "node scripts/postinstall.js"
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 8"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "private": true,
  "main": "index.js",
  "build": {
    "appId": "simpleos",
    "nodeGypRebuild": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "index.js",
      "ng-dist",
      "static",
      "resources",
      "electron_modules",
      "build/icons/**/*"
    ],
    "afterSign": "electron-builder-notarize",
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "scripts/entitlements.mac.plist",
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "icon": "icons/simpleos/icon.icns"
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "executableName": "simpleos",
      "target": [
        "appImage",
        "deb"
      ],
      "icon": "icons/simpleos",
      "category": "Network",
      "desktop": {
        "Name": "SimplEOS",
        "GenericName": "SimplEOS Wallet",
        "X-GNOME-FullName": "simpleos",
        "Comment": "SimplEOS Blockchain Wallet",
        "Type": "Application",
        "Terminal": "false",
        "StartupNotify": "false",
        "Categories": "Network;"
      }
    },
    "snap": {
      "confinement": "classic",
      "grade": "stable"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/simpleos/icon.ico"
    },
    "appx": {
      "backgroundColor": "#232526",
      "languages": [
        "en-US"
      ],
      "showNameOnTiles": true,
      "identityName": "EOSRio.SimplEOS"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true
    },
    "protocols": [
      {
        "name": "simpleos",
        "role": "Viewer",
        "schemes": [
          "simpleos"
        ]
      }
    ]
  },
  "files": [
    "*.js",
    "build",
    "static",
    "resources",
    "ng-dist",
    "node_modules"
  ],
  "dependencies": {
    "@angular/animations": "14.2.0",
    "@angular/cdk": "14.2.0",
    "@angular/common": "14.2.0",
    "@angular/core": "14.2.0",
    "@angular/flex-layout": "14.0.0-beta.40",
    "@angular/forms": "14.2.0",
    "@angular/material": "14.2.0",
    "@angular/material-moment-adapter": "14.2.0",
    "@angular/platform-browser": "14.2.0",
    "@angular/platform-browser-dynamic": "14.2.0",
    "@angular/router": "14.2.0",
    "@cds/core": "^6.1.1",
    "@clr/angular": "^13.8.0",
    "@clr/icons": "^13.0.2",
    "@clr/ui": "^13.8.0",
    "@fortawesome/angular-fontawesome": "~0.11.1",
    "@fortawesome/fontawesome-svg-core": "~1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/pro-duotone-svg-icons": "^5.15.4",
    "@fortawesome/pro-light-svg-icons": "^5.15.4",
    "@fortawesome/pro-regular-svg-icons": "^5.15.4",
    "@fortawesome/pro-solid-svg-icons": "^5.15.4",
    "@ledgerhq/hw-transport": "6.27.2",
    "@ledgerhq/hw-transport-node-hid": "6.27.2",
    "@ngx-formly/core": "6.0.0",
    "@ngx-formly/material": "6.0.0",
    "@popperjs/core": "^2.9.2",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "angularx-qrcode": "^14.0.0",
    "animate.css": "4.1.1",
    "asn1-ber": "1.2.2",
    "auto-launch": "5.0.5",
    "bip32-path": "0.4.2",
    "bn.js": "5.2.1",
    "body-parser": "1.20.0",
    "bootstrap": "5.2.0",
    "cors": "2.8.5",
    "crypto-js": "4.1.1",
    "echarts": "^5.3.3",
    "electron-context-menu": "3.5.0",
    "enf-eosjs": "^23.0.0-rc3",
    "eosjs": "22.1.0",
    "express": "4.18.1",
    "fcbuffer": "2.2.2",
    "hammerjs": "2.0.8",
    "isomorphic-fetch": "3.0.0",
    "jquery": "3.6.1",
    "keytar": "^7.9.0",
    "level": "^8.0.0",
    "lodash": "4.17.21",
    "lottie-web": "5.9.6",
    "menu": "0.2.5",
    "moment": "2.29.4",
    "ngx-echarts": "14.0.0",
    "ngx-json-viewer": "3.1.0",
    "ngx-lottie": "9.0.0",
    "ngx-mask": "14.0.3",
    "ngx-order-pipe": "2.2.0",
    "ngx-pagination": "6.0.2",
    "ngx-toastr": "15.0.0",
    "node-abi": "3.24.0",
    "node-fetch": "^2.6.1",
    "node-schedule": "2.1.0",
    "open": "^8.4.0",
    "portfinder": "1.0.32",
    "primeicons": "5.0.0",
    "primeng": "14.0.2",
    "resize-observer-polyfill": "1.5.1",
    "rxjs": "~7.5.6",
    "socket.io": "4.5.1",
    "socket.io-client": "4.5.1",
    "sudo-prompt": "9.2.1",
    "tar": "6.1.11",
    "text-mask-addons": "3.8.0",
    "tslib": "^2.4.0",
    "usb": "2.5.0",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "14.2.1",
    "@angular/cli": "14.2.1",
    "@angular/compiler": "14.2.0",
    "@angular/compiler-cli": "14.2.0",
    "@angular/language-service": "14.2.0",
    "@types/bn.js": "^5.1.0",
    "@types/crypto-js": "^4.1.1",
    "@types/echarts": "^4.9.16",
    "@types/express": "4.17.13",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^16.11.7",
    "@webcomponents/custom-elements": "1.4.3",
    "codelyzer": "6.0.2",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.23.0",
    "npm-run-all": "4.1.5",
    "text-encoding-shim": "1.0.5",
    "ts-node": "~10.9.1",
    "typescript": "~4.8.2",
    "wait-on": "6.0.1"
  }
}
