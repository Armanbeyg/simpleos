		"@types/crypto-js": "^4.0.1",
		"@types/echarts": "^4.9.4",
		"@types/express": "4.17.11",
		"@types/node": "14.14.37",
		"@webcomponents/custom-elements": "1.4.3",
		"codelyzer": "6.0.1",
		"electron": "12.0.2",
		"electron-builder": "22.10.5",
		"electron-builder-notarize": "^1.2.0",
		"electron-reload": "^1.5.0",
